generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Enums
enum UserRole {
  ADMIN
  VENDEDOR
  ALMACENERO
  CONTADOR
}

enum SaleStatus {
  COMPLETADA
  PENDIENTE
  ANULADA
}

enum QuoteStatus {
  PENDIENTE
  APROBADO
  RECHAZADO
  CONVERTIDO
}

enum PaymentMethod {
  EFECTIVO
  TARJETA
  TRANSFERENCIA
}

enum PurchaseStatus {
  PENDIENTE
  RECIBIDA
  PARCIAL
  CANCELADA
}

// User Model (con soporte para NextAuth)
model User {
  id            Int       @id @default(autoincrement())
  email         String    @unique
  emailVerified DateTime?
  name          String
  password      String    // password_hash
  rol           UserRole  @default(ADMIN)
  estado        Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastLogin     DateTime?

  // Relaciones
  sales         Sale[]
  quotes        Quote[]
  auditLogs     AuditLog[]

  // NextAuth fields
  accounts      Account[]
  sessions     Session[]

  @@index([email])
  @@index([rol])
  @@index([estado])
}

// NextAuth models
model Account {
  id                Int     @id @default(autoincrement())
  userId            Int
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           Int      @id @default(autoincrement())
  sessionToken String   @unique
  userId       Int
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Category Model
model Category {
  id          Int       @id @default(autoincrement())
  nombre      String    @unique
  descripcion String?
  createdAt   DateTime  @default(now())

  // Relaciones
  products    Product[]

  @@index([nombre])
}

// Product Model
model Product {
  id               Int       @id @default(autoincrement())
  nombre           String
  descripcion      String?
  codigoBarras     String?   @unique
  categoriaId      Int?
  precioMinorista  Float
  precioMayorista  Float
  stockActual      Int       @default(0)
  stockMinimo      Int       @default(0)
  imagenUrl        String?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  // Relaciones
  categoria        Category?         @relation(fields: [categoriaId], references: [id], onDelete: SetNull)
  saleItems        SaleItem[]
  quoteItems       QuoteItem[]
  purchaseItems    PurchaseItem[]
  supplierPrices   SupplierPrice[]
  productStocks    ProductStock[]

  @@index([nombre])
  @@index([codigoBarras])
  @@index([categoriaId])
}

// Customer Model
model Customer {
  id                    Int       @id @default(autoincrement())
  nombre                String
  dni                   String?
  email                 String?   @unique
  telefono              String?
  direccion             String?
  limiteCredito         Float     @default(0)
  saldoCuentaCorriente  Float     @default(0)
  activo                Boolean   @default(true)
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  // Relaciones
  sales                 Sale[]
  quotes                Quote[]

  @@index([email])
  @@index([dni])
  @@index([activo])
}

// Sale Model
model Sale {
  id            Int           @id @default(autoincrement())
  clienteId     Int?
  vendedorId    Int
  vendedorNombre String
  total         Float
  estado        SaleStatus   @default(COMPLETADA)
  metodoPago    PaymentMethod
  notas         String?
  fecha         DateTime      @default(now())
  createdAt     DateTime      @default(now())

  // Relaciones
  cliente       Customer?     @relation(fields: [clienteId], references: [id], onDelete: SetNull)
  vendedor       User         @relation(fields: [vendedorId], references: [id])
  items         SaleItem[]

  @@index([fecha])
  @@index([vendedorId])
  @@index([clienteId])
  @@index([estado])
}

// SaleItem Model
model SaleItem {
  id            Int       @id @default(autoincrement())
  saleId        Int
  productoId    Int
  productoNombre String
  cantidad      Int
  precioUnitario Float
  subtotal      Float

  // Relaciones
  sale          Sale      @relation(fields: [saleId], references: [id], onDelete: Cascade)
  producto      Product   @relation(fields: [productoId], references: [id])

  @@index([saleId])
  @@index([productoId])
}

// Quote Model
model Quote {
  id                  Int         @id @default(autoincrement())
  clienteId           Int
  vendedorId          Int
  vendedorNombre      String
  total               Float
  estado              QuoteStatus @default(PENDIENTE)
  validezDias         Int         @default(15)
  notas               String?
  convertidoAVentaId  Int?
  fecha               DateTime    @default(now())
  createdAt           DateTime    @default(now())

  // Relaciones
  cliente             Customer    @relation(fields: [clienteId], references: [id])
  vendedor            User        @relation(fields: [vendedorId], references: [id])
  items               QuoteItem[]

  @@index([fecha])
  @@index([vendedorId])
  @@index([clienteId])
  @@index([estado])
}

// QuoteItem Model
model QuoteItem {
  id            Int       @id @default(autoincrement())
  quoteId       Int
  productoId    Int
  productoNombre String
  cantidad      Int
  precioUnitario Float
  subtotal      Float

  // Relaciones
  quote         Quote     @relation(fields: [quoteId], references: [id], onDelete: Cascade)
  producto      Product   @relation(fields: [productoId], references: [id])

  @@index([quoteId])
  @@index([productoId])
}

// Warehouse Model
model Warehouse {
  id        Int       @id @default(autoincrement())
  nombre    String    @unique
  direccion String?
  encargado String?
  telefono  String?
  activo    Boolean   @default(true)
  createdAt DateTime  @default(now())

  // Relaciones
  purchases     Purchase[]
  productStocks ProductStock[]

  @@index([nombre])
  @@index([activo])
}

// Supplier Model
model Supplier {
  id        Int       @id @default(autoincrement())
  nombre    String
  contacto  String?
  email     String?
  telefono  String?
  direccion String?
  cuit      String?
  activo    Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relaciones
  supplierPrices SupplierPrice[]
  purchases      Purchase[]

  @@index([nombre])
  @@index([activo])
}

// SupplierPrice Model
model SupplierPrice {
  id              Int       @id @default(autoincrement())
  productoId      Int
  productoNombre  String
  proveedorId     Int
  proveedorNombre String
  precio          Float
  codigoProveedor String?
  fechaActualizacion DateTime @default(now()) @updatedAt

  // Relaciones
  producto        Product   @relation(fields: [productoId], references: [id], onDelete: Cascade)
  proveedor       Supplier  @relation(fields: [proveedorId], references: [id], onDelete: Cascade)

  @@unique([productoId, proveedorId])
  @@index([productoId])
  @@index([proveedorId])
  @@index([fechaActualizacion])
}

// Purchase Model
model Purchase {
  id            Int             @id @default(autoincrement())
  proveedorId   Int
  proveedorNombre String
  depositoId    Int
  depositoNombre String
  total         Float
  estado        PurchaseStatus  @default(PENDIENTE)
  numeroFactura String?
  notas         String?
  recibidaPor   String?
  fechaRecepcion DateTime?
  fecha         DateTime        @default(now())
  createdAt     DateTime        @default(now())

  // Relaciones
  proveedor     Supplier        @relation(fields: [proveedorId], references: [id])
  deposito      Warehouse        @relation(fields: [depositoId], references: [id])
  items         PurchaseItem[]

  @@index([proveedorId])
  @@index([depositoId])
  @@index([fecha])
  @@index([estado])
}

// PurchaseItem Model
model PurchaseItem {
  id            Int       @id @default(autoincrement())
  purchaseId    Int
  productoId    Int
  productoNombre String
  cantidad      Int
  precioUnitario Float
  subtotal      Float

  // Relaciones
  purchase      Purchase  @relation(fields: [purchaseId], references: [id], onDelete: Cascade)
  producto      Product   @relation(fields: [productoId], references: [id])

  @@index([purchaseId])
  @@index([productoId])
}

// ProductStock Model (Stock por dep√≥sito)
model ProductStock {
  id              Int       @id @default(autoincrement())
  productoId      Int
  depositoId      Int
  cantidad         Int       @default(0)
  ubicacionInterna String?

  // Relaciones
  producto        Product   @relation(fields: [productoId], references: [id], onDelete: Cascade)
  deposito        Warehouse @relation(fields: [depositoId], references: [id], onDelete: Cascade)

  @@unique([productoId, depositoId])
  @@index([productoId])
  @@index([depositoId])
}

// AuditLog Model
model AuditLog {
  id            Int       @id @default(autoincrement())
  usuarioId     Int
  usuarioNombre String
  accion        String
  modulo        String
  detalles      String?
  timestamp     DateTime  @default(now())

  // Relaciones
  usuario       User      @relation(fields: [usuarioId], references: [id], onDelete: Cascade)

  @@index([timestamp])
  @@index([usuarioId])
  @@index([modulo])
}

